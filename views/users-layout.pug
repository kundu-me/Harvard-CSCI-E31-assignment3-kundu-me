h3 Users
h4
    .container
        .row
            .col-sm-3
                h4 Userid
            .col-sm-3
                h4 Name
            .col-sm-3
                h4 Address
            .col-sm-3
                h4 Orders
        hr
        each user in users
            .row
                .col-sm-3
                    p #{user.userid}
                .col-sm-3
                    p #{user.name}
                .col-sm-3
                    p #{user.address}
                .col-sm-3
                    for orderid in user.orders
                        .row
                            p
                                a(href="orders/order/#{orderid}") #{orderid}
